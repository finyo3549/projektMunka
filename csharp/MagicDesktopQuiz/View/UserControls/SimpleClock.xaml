<UserControl x:Class="MagicQuizDesktop.View.UserControls.SimpleClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagicQuizDesktop.View.UserControls"
             mc:Ignorable="d" 
             Width="250" Height="250">
    <Grid>
        <Border x:Name="ClockBody" BorderBrush="White" BorderThickness="5" CornerRadius="1000" Height="auto" Width="auto"/>
        <Ellipse x:Name="ClockMiddle" Fill="White" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Line x:Name="MIN" Y2="-100" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin=".5,.5" Margin="0,2,0,0">
            <Line.RenderTransform>
                <RotateTransform Angle="90"/>
            </Line.RenderTransform>
        </Line>        <Line x:Name="HOUR" Y2="-50" Stroke="White" StrokeThickness="6" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin=".5,.5" Margin="0,5,0,0">
            <Line.RenderTransform>
                <RotateTransform Angle="40"/>
            </Line.RenderTransform>
        </Line>
    </Grid>
</UserControl>
