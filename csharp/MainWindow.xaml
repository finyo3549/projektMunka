<Window x:Class="MagicQuizDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:MagicQuizDesktop.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height ="800" Width="900" MinHeight="800" MinWidth="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.Background>
        <ImageBrush ImageSource="Media/GalaxyBackground.jpg" Stretch="UniformToFill" Opacity="1"/>
    </Window.Background>

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
